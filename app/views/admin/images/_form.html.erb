<div class="section_form">
  <div class="container">
    <div class="row">
      <div class="col pt-5">
        <div class="container-form card p-5 hvr-shadow">
          <%= form_for [:admin, @image] do |f| %>
            <div class="form-group">
              <%= f.label :description, "Descripcion del nuevo evento" %><br>
              <%= f.text_area :description, placeholder: "Escribe la nueva descripcion del evento", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :picture , "Descripcion del nuevo evento" %><br>
              <%= f.text_field :picture, placeholder: "Escriba la url de la imagen", class: "form-control" %>
            </div>

            <div>
              <%= f.submit "Guardar", class: "btn btn-warning" %>
            </div>
          <% end %>
        </div>
      </div>  
    </div>
  </div>
</div>

<script>
  $("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
  });
</script>