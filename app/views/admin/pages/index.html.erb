<div class="section__admin-index">
	<div class="container">
		<div class="title">
			<h3>Administrador</h3>
		</div>
		<div class="row">
			<div class="col-md-6 mt-5">
				<%= link_to admin_events_path, class: "card hvr-grow-shadow" do  %>
					<h3>Numero de Eventos</h3>
					<span> <%=@Events %></span>
				<% end %>
			</div>
			<div class="col-md-6 mt-5">
				<%= link_to admin_events_path, class: "card hvr-grow-shadow" do  %>
